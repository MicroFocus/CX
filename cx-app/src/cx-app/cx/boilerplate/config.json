{
    "env": {
        "dev": {
            "local": {
                "protocol": "http",
                "host": "0.0.0.0",
                "port": "8080"
            }
        },
        "browser": "Google Chrome",
        "livereloadPort": "9000",
        "linters": {
            "continueOnError": false,
            "maxErrors": 2
        },
        "livereload": {
            "host": "localhost",
            "port": "35729",
            "options": {
                "open": true,
                "base": [
                    ".app"
                ]
            }
        }
    },

    "paths": {
        "app": "app",
        "build": "build",
        "tmp": ".tmp",
        "test": "test",
        "tasks": "tasks",
        "i18n": "i18n",
        "locale": "en-US",
        "deploy": "../target",
        "assets": "/_assets/",
        "api": "/_assets/api",
        "bower": "/_assets/bower",
        "sass": "/_assets/sass",
        "css": "/_assets/css",
        "fonts": "/_assets/fonts",
        "img": "/_assets/img",
        "componentSass": "/components/**/*.scss",
        "jade": "/**/*.scss",
        "ngdocTemplate" : "./config/templates"
    }
}
