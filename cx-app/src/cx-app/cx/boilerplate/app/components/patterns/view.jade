div.row-fluid
    div.tabbable.tabs-left
        ul.col-md-1.vertical-nav.secondary-nav
            li(ng-repeat="category in patterns")
                span.list-item-title
                    | {{ category.name }}
                ul.vertical-nav(ng-repeat="pattern in category.children")
                    li(ng-class="{ 'active' : pattern.active === true }")
                        a(ng-click="showTab($parent.$index, $index)")
                            | {{ pattern.name }}
        div.tab-content.col-md-11.col-md-offset-1
            //- p {{ patterns | json }}
            div.tabs-hidden
                uib-tabset(class="patternNav")
                    uib-tab(ng-repeat="category in patterns",
                        ng-attr-id="{{ category.slug }}",
                        active="category.active")
                        uib-tabset(style="background-color: #e9e9e9")
                            uib-tab(ng-repeat="pattern in category.children",
                                ng-attr-id="{{ pattern.name }}",
                                active="pattern.active")

                                div(id="{{ pattern.name | lowercase }}")
                                    div.tab-pane.fade.in(patterns="pattern", src="pattern.path", source="source")

